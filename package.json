{
  "name": "monorepo",
  "workspaces": [
    "packages/api",
    "packages/client"
  ],
  "scripts": {
    "start": "concurrently --kill-others --names \"JsonServerAPI,Vite\" --prefix \"[{name}]\" --prefix-colors \"bgBlue.bold,bgYellow.bold\" --max-processes=\"75%\" \"npm run start:api\" \"npm run start:client\"",
    "start:client": "npm run --workspace packages/client dev",
    "start:api": "npm run --workspace packages/api start",
    "eslint": "eslint ./packages/client/src/**/*.{ts,tsx,json,cjs,mjs,js}",
    "stylelint": "stylelint --config \"./packages/client/.stylelintrc.js\" --config-basedir \"./packages/client\" ./packages/client/src/**/*.scss"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^8.0.1",
    "eslint": "8.40.0",
    "eslint-plugin-compat": "4.1.4",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-form-fields": "1.2.22",
    "eslint-plugin-react-hook-form": "0.3.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "stylelint": "15.6.1",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-no-unsupported-browser-features": "6.1.0",
    "typescript": "^4.9.3"
  }
}

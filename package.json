{
  "scripts": {
    "start": "concurrently --kill-others --names \"SASS,ESLint:JS,StyleLint:SASS,LiveServer\" --prefix \"[{name}]\" --prefix-colors \"bgMagenta.bold,bgGray.bold,bgRed.bold,bgYellow.bold\" --max-processes=\"50%\" \"sass --watch --no-unicode --no-error-css ./src/scss:./src/public/dist/css\" \"npm run _eslint:watchjs\" \"npm run _stylelint:watchsass\" \"live-server --port=8080 --host=127.0.0.1 --browser=CHROME --ignore=./src/scss/ --watch=./src/public/ --open=./src/public/ --entry-file=./src/public/index.html --no-css-inject --wait=500\"",
    "_eslint:watchjs": "chokidar \"./src/**/*.js\" -c \"npm run _eslint:js\"",
    "_eslint:js": "npx eslint \"./src\"  --ext .js",
    "_stylelint:watchsass": "chokidar \"./src/scss/*.scss\" -c \"npm run _stylelint:sass\"",
    "_stylelint:sass": "stylelint --config \"./.stylelintrc.sass.json\" \"./src/scss/*.scss\"",
    "__stylelint:watchcss": "chokidar \"./src/public/css/*.css\"  -c \"npm run _stylelint:css\"",
    "__stylelint:css": "stylelint \"./src/public/dist/css/*.css\"",
    "build": "echo \"Error: Not implemented yet ðŸ˜¢\" && exit 1"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-plugin-compat": "^4.1.4",
    "live-server": "^1.2.2",
    "sass": "^1.60.0",
    "stylelint": "^15.4.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^32.0.0"
  }
}

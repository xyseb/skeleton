{
  "devDependencies": {
    "concurrently": "^7.6.0",
    "live-server": "^1.2.2",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "start": "concurrently --kill-others --names \"Typescript,Node\" --prefix \"[{name}]\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"tsc --watch\" \"live-server --port=8080 --host=127.0.0.1 --watch=./src/public --entry-file=index.html --no-css-inject --wait=500\""
  }
}
